{
  "name": "quiz-backend",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "prettier": "prettier --cache --write .",
    "format": "pnpm run lint:fix && pnpm run prettier && prisma format",
    "typecheck": "tsc",
    "wrangler:dev": "cd .. && wrangler pages dev client/dist",
    "dev": "pnpm run prisma:generate && pnpm run wrangler:dev",
    "prisma:migrate": "dotenv -- bash -c 'DATABASE_URL=${MIGRATE_DATABASE_URL} prisma migrate dev'",
    "prisma:migrate:deploy": "dotenv -- bash -c 'DATABASE_URL=${MIGRATE_DATABASE_URL} prisma migrate deploy'",
    "prisma:generate": "prisma generate",
    "prisma:generate:proxy": "prisma generate --data-proxy"
  },
  "devDependencies": {
    "prisma": "^4.8.0"
  },
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "@trpc/server": "^10.6.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "dotenv-expand": "^10.0.0",
    "zod": "^3.20.2"
  }
}
